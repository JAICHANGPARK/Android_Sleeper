            app:cb_isTextCleanerEnabled="true"
            app:cb_messageBoxHint="sample text" />


        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/charBar"
